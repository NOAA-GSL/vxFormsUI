{{define "form.tmpl"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{.FormType}} Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
</head>
<body class="container mt-5">
    <h1>{{.FormType}}</h1>
    <form method="post">
        {{range $key, $value := .Data}}
            <div class="mb-3">
                <label class="form-label">{{$key}}</label>
                {{if eq $key "job_spec_ids"}}
                    <select class="form-select" name="job_spec_ids" multiple>
                        {{range $.SelectOptions.job_spec_ids}}
                            <option value="{{.}}">{{.}}</option>
                        {{end}}
                    </select>
                {{else if eq $key "ingest_document_ids"}}
                    <select class="form-select" name="ingest_document_ids" multiple>
                        {{range $.SelectOptions.ingest_document_ids}}
                            <option value="{{.}}">{{.}}</option>
                        {{end}}
                    </select>
                {{else if eq $key "version"}}
                    <input class="form-control" name="version" value="{{$value}}" />
                {{else if eq (printf "%T" $value) "bool"}}
                    <input class="form-check-input" type="checkbox" name="{{$key}}" {{if $value}}checked{{end}} />
                {{else}}
                    <input class="form-control" name="{{$key}}" value="{{$value}}" />
                {{end}}
            </div>
        {{end}}
        <button class="btn btn-success" type="submit">Submit</button>
        <a href="/" class="btn btn-secondary ms-2">Back</a>
    </form>
</body>
</html>
{{end}}
